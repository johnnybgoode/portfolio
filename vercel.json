{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, s-maxage=86400, stale-if-error=86400"
        }
      ]
    },
    {
      "source": "(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=3600"
        }
      ]
    }
  ],
  "functions": {
    "api/blocks*.ts": {
      "includeFiles": "src/data/block.ts"
    }
  },
  "redirects": [
    {
      "source": "/api/utils(.*)",
      "destination": "/"
    }
  ],
  "rewrites": [
    {
      "source": "/api/blocks/:id",
      "destination": "/api/blocks.ts"
    },
    {
      "source": "/api/database/:id",
      "destination": "/api/database.ts"
    },
    {
      "source": "/api/data-source/:id",
      "destination": "/api/data-source.ts"
    },
    {
      "source": "/api/page/:id",
      "destination": "/api/page.ts"
    }
  ]
}
