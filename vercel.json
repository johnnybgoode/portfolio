{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "cleanUrls": true,
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, s-maxage=86400, stale-if-error=86400"
        }
      ]
    },
    {
      "source": "(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, s-maxage=3600"
        }
      ]
    }
  ],
  "redirects": [
    {
      "source": "/api/blocksRecursive(.*)",
      "destination": "/"
    },
    {
      "source": "/api/utils(.*)",
      "destination": "/"
    }
  ],
  "rewrites": [
    {
      "source": "/api/blocks/:id",
      "destination": "/api/blocks"
    },
    {
      "source": "/api/database/:id",
      "destination": "/api/database"
    },
    {
      "source": "/api/data-source/:id",
      "destination": "/api/data-source"
    },
    {
      "source": "/api/page/:id",
      "destination": "/api/page"
    },
    {
      "source": "/([^.@]+)",
      "destination": "/"
    }
  ]
}
